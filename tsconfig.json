{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist"
  },
  "exclude": ["src/**/*.test.ts", "dist/**/*", "__tests__/**/*"]
}